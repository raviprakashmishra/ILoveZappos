<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomCardViewStyle" parent ="CardView.Light">
        <item name="android:layout_marginLeft">@dimen/cardview_side_padding</item>
        <item name="android:layout_marginRight">@dimen/cardview_side_padding</item>
        <item name="android:layout_marginTop">@dimen/cardview_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/cardview_vertical_padding</item>
        <item name="cardCornerRadius">@dimen/cardview_corner_radius</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
    </style>

</resources>

